<!-- ALL posts -->
<p><%= render "shared/user_info" %></p>
<p><%= render 'posts/form' %></p>


<% @posts.each do |post| %>

<div class="card" style="width: 30rem">

  <%= cl_image_tag(post.image) if post.image.present? %>
  <h5 class="card-title"><%= link_to(post.content, "/posts/#{post.id}" )%></h5>
  <p><%= post.user.name if post.user.present?%></p>
</div>
<% end %>
