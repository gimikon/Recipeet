
<!-- ALL posts -->

<aside>
  <p><%= render "shared/user_info" %></p>
  <!-- this is log in User's info -->
</aside>


<div class="posts-form">
<%= render 'shared/new' %>
</div>


<% @posts.each do |post| %>

<div class="card" style="width: 40rem;">

  <img class="card-img-top" src="<%= post.image %>" alt="Card image cap">
    <h5 class="card-title"><%= link_to(post.content, "/posts/#{post.id}" )%></h5>



</div>
<% end %>
</div>
