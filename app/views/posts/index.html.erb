

<!-- ALL posts -->
<p><%= render "shared/user_info" %></p>
<section class="stats">
       <%= render 'shared/stats' %>
</section>




<p><%= render 'posts/form' %></p>



<% @posts.each do |post| %>

  <div class="card" style="width: 24rem">
    <% if post.image.present? %>
      <%= cl_image_tag(post.image, :class => "card-img-top")%>
    <% end %>
    <h5 class="card-title"><%= link_to(post.content, "/posts/#{post.id}" )%></h5>
     <% if post.user.present?%>
       <p><%= link_to post.user.name, user_path(post.user.id)%></p>
     <% else %>
       <p><%= post.user.email %></p>
      <% end %>


  </div>

<% end %>
